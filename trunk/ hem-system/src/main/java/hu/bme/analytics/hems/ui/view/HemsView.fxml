                                </rowConstraints>
                                 <children>
                                    <Label text="Person's list" GridPane.rowIndex="0" />
                                    <TableView fx:id="tbl_persons" GridPane.rowIndex="1" />
                                    <Button mnemonicParsing="false" onMouseClicked="#personDataDownloadClickHandler" text="Download Persons" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                   
                                   	<Label text="Project list" GridPane.rowIndex="2" />
                                    <TableView fx:id="tbl_projects" GridPane.rowIndex="3" />
                                    <Button mnemonicParsing="false" onMouseClicked="#projectDataDownloadClickHandler" text="Download Projects" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    
                                    <Label text="Task list" GridPane.rowIndex="4" />
                                    <TableView fx:id="tbl_tasks" GridPane.rowIndex="5" />
                                    <Button mnemonicParsing="false" onMouseClicked="#taskDataDownloadClickHandler" text="Download Tasks" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                    
                                    <Label text="Assignment list" GridPane.rowIndex="6" />
                                    <TableView fx:id="tbl_assignments" GridPane.rowIndex="7" />
                                    <Button mnemonicParsing="false" onMouseClicked="#assignmentDataDownloadClickHandler" text="Download Tasks" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                                 </children>
                              </GridPane>
                           </content>
                        </ScrollPane>
                     </content>
                </Tab>
<!--            ISSUE STATISTICS -->
                <Tab text="Issue statistics" fx:id="tab_issueStats" onSelectionChanged="#issueStatsSelectedHandler">
                  <content>
                      <BorderPane prefHeight="300.0" prefWidth="300.0">
                         <top>
                            <GridPane BorderPane.alignment="CENTER">
                              <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                              </columnConstraints>
                              <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              </rowConstraints>
                               <children>
                                  <Label text="Project" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                  <Label text="Employee" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                  <ComboBox fx:id="cb_issueStat_project" prefWidth="150.0" GridPane.columnIndex="1" onAction="#cbIssueStatProjectChangeHandler"/>
                                  <ComboBox fx:id="cb_issueStat_employee" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#cbIssueStatEmployeeChangeHandler" />
                               </children>
                            </GridPane>
                         </top>
                         <center>
                         	<VBox fx:id="vb_issueStat" visible="false">
                         		<Label text="Overall project data"/>
                         		<PieChart fx:id="pc_prjOverall"/>
                         	</VBox>
                         </center>
                      </BorderPane>
                  </content>
                </Tab>
<!--            CANDIDATE SEARCHER -->
                <Tab text="Candidate searcher">
                     <content>
                        <BorderPane prefHeight="200.0" prefWidth="200.0">
                           <top>
                              <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <TextField fx:id="tf_candidateSearch" />
                                    <Button mnemonicParsing="false" onMouseClicked="#searchCandidateClickHandler" text="Search" />
                                 </children>
                              </HBox>
                           </top>
                           <center>
                              <GridPane id="cadidateResult" fx:id="g_cadidateResult">
                               <columnConstraints>
                                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
